{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EMX Emotional Mixing Matrix",
  "type": "object",
  "required": [
    "emx_version",
    "emotions",
    "matrix",
    "params"
  ],
  "properties": {
    "emx_version": {
      "type": "string"
    },
    "emotions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "matrix": {
      "type": "array",
      "description": "Coupling weights W[i][j] = influence of emotion j on i",
      "items": {
        "type": "array",
        "items": {
          "type": "number"
        }
      }
    },
    "params": {
      "type": "object",
      "required": [
        "decay",
        "dt",
        "nonlinearity",
        "caps"
      ],
      "properties": {
        "decay": {
          "type": "number",
          "minimum": 0
        },
        "dt": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "temperature": {
          "type": "number",
          "minimum": 0
        },
        "nonlinearity": {
          "type": "string",
          "enum": [
            "identity",
            "tanh",
            "sigmoid"
          ]
        },
        "caps": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "inhibitors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "source",
              "target",
              "factor"
            ],
            "properties": {
              "source": {
                "type": "string"
              },
              "target": {
                "type": "string"
              },
              "factor": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              }
            }
          }
        },
        "policy": {
          "type": "object",
          "properties": {
            "isnt_operator": {
              "type": "object",
              "properties": {
                "bind_to_nearest_clause": {
                  "type": "boolean"
                },
                "drop_weaker_anchor": {
                  "type": "boolean"
                }
              }
            },
            "zero_equals_one_probe": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "initial_state": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      }
    },
    "metadata": {
      "type": "object"
    }
  }
}